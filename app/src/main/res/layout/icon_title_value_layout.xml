<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center|start"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon_title_value_icon"
        android:layout_width="@dimen/size_24"
        android:layout_height="@dimen/size_24"
        android:layout_margin="@dimen/padding_m"
        android:contentDescription="@string/image_description" />

    <TextView
        android:id="@+id/icon_title_value_title"
        style="@style/text_secondary"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_24"
        android:layout_margin="@dimen/padding_m"
        android:gravity="center" />

    <TextView
        android:id="@+id/icon_title_value_value"
        style="@style/text_bold"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_24"
        android:layout_marginTop="@dimen/padding_m"
        android:layout_marginEnd="@dimen/padding_m"
        android:layout_marginBottom="@dimen/padding_m"
        android:ellipsize="end"
        android:gravity="center|start"
        android:maxLines="1"
        android:textAlignment="viewStart" />

</LinearLayout>