<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/padding_m"
    android:background="@color/color_white"
    android:elevation="2dp"
    android:orientation="vertical"
    android:padding="@dimen/padding_l">

    <TextView
        android:id="@+id/article_part_title"
        style="@style/text_large_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_l" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/article_part_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:contentDescription="@string/image_description"
            android:scaleType="fitCenter"
            android:background="@color/color_white"
            android:src="@color/color_placeholder"
            app:layout_constraintDimensionRatio="H,1:1" />

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/article_part_caption"
        style="@style/text_small_secondary"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_m" />

    <TextView
        android:id="@+id/article_part_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>