<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/padding_m">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40"
        android:background="@drawable/form_field_view_white_background"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/form_field_view_icon"
            android:layout_width="@dimen/size_40"
            android:layout_height="@dimen/size_40"
            android:contentDescription="@string/image_description"
            android:padding="@dimen/padding_m" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_primary_dark" />

        <EditText
            android:id="@+id/form_field_view_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:gravity="center|start"
            android:lines="1"
            android:maxLines="1"
            android:paddingStart="@dimen/padding_m"
            android:paddingEnd="@dimen/padding_m"
            android:textAlignment="viewStart"
            style="@style/text"
            android:textColorHint="@color/color_placeholder"
            android:maxLength="200" />
    </LinearLayout>

    <TextView
        android:id="@+id/form_field_view_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_m"
        android:textColor="@color/color_white"
        android:visibility="gone" />
</LinearLayout>
